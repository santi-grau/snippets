@import "../../css/main.styl"

html, body
    padding 0
    margin 0
    background #000000
    color #ff0000




.scroller
  width: 100vw;
  height: 100vh;
  overflow: scroll;
  position: relative;
  scroll-snap-type: both mandatory;

.element
    width: 100vw;
    height: 100vh;
    scroll-snap-align: start;
    scroll-snap-stop: normal;
    
    display: flex;
    justify-content: center;
    align-items: center;
    &:nth-child(1)
        background #1d1e21
    &:nth-child(2)
        background #ee6620
    &:nth-child(3)
        background #777ba0
    &:nth-child(4)
        background #da1e62
    &:nth-child(5)
        background #ff1e21
    &:nth-child(6)
        background #ff6620
    &:nth-child(7)
        background #ff7ba0
    &:nth-child(8)
        background #ff1e62


.scroller {
  width: 100vw;
  height: 100%;
  display: grid;
  grid-template-columns: 100vw 100vh;
}



#main
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    user-select none
    pointer-events none
    -webkit-touch-callout none
    canvas
        user-select none
        pointer-events none
        -webkit-touch-callout none
