@import '../../css/main.styl'

html, body
    background #ffffff
    color #000000
#wrap
    position fixed
    width 100%
    height 100vh
    top 0
    left 0
    #main
        font-family Times
        width 100%
        font-weight 200
        text-align center
        position absolute
        top 40%
        left 50%
        transform translate3d( -50%, -50%, 0 )
        
        p
            margin 0
            padding 0
            font-weight bold
            font-size 30px
            line-height 32px
            letter-spacing -0.8px
    
    .disclaimer
        position absolute
        bottom 30px
        left 0%
        font-size 11px
        width 100%
        text-align center