@import "../../css/main.styl"

html, body
    padding 0
    margin 0
    background #000000
    color #ffffff

#main
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh

#copy
    position absolute
    font-family: -apple-system, system-ui, BlinkMacSystemFont;
    font-weight 500
    z-index 1000
    text-align center
    line-height 18px
    width 85%
    padding 0
    top 50%
    left 50%
    transform translate3d( -50%, -60%, 0 )
    opacity 0
    color #ffffff
    

