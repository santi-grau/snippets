@import '../../css/main.styl'
#main
    height 100%
    width 100%
    top 0
    left 0
    position fixed
    z-index 0
    canvas
        position fixed
        top 50%
        left 50%
        transform translate3d( -50%, -50%, 0 )

#capture
    position relative
    display block
    z-index 10
    canvas
        position absolute 
        top 0
        left 0
    video
        transform scaleX( -1 )