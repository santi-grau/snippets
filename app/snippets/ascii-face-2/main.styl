@import '../../css/main.styl'
html, body
    background #000000
    height 100%
body
    color #ffffff
    font-family 'IBM Plex Mono', monospace;
    font-size 9px
    line-height 6px
    text-align left
    height 100vh
    overflow hidden
    
    canvas
        display none
    #main
        width 100%
        // height 100%
        position fixed
        left 50%
        top 50%
        transform translate3d( -50%, -50%, 0 )

video
    position absolute
    top 50%
    left 50%
    transform translate3d( -50%, -50%, 0 ) scaleX( -1 )
    display none
    &.active
        pointer-events auto
        display block

.container
    position relative
    scroll-snap-type y mandatory;
    width 100vw
    height 100vh
    overflow scroll
    pointer-events auto
    &.active
        pointer-events auto

.child
    scroll-snap-align start
    height 100vh

button
    position absolute
    display none
    bottom 10px
    left 50%
    z-index 10
    transform translate3d( -50%, 0, 0 )
    